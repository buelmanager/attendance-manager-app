<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".view.activity.TeamManagerViewActivity">

    <include
        layout="@layout/top_bar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="36dp"
            android:id="@+id/manager_tv_title"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:textColor="@color/lightGray"
            android:text=" * 소그룹을 추가 할 수 있습니다."
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:inputType="number"
            android:id="@+id/team_manager_activity_view_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="소그룹 번호(고유번호)" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/team_manager_activity_view_et_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="명칭/이름(미입력시 부서명으로 대체)" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/team_manager_activity_view_et_leader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="리더" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
        android:layout_marginTop="50dp"
        android:textColor="@color/lightGray"
        android:text="* 소그룹 번호는 1번부터 순차적/고유번호를 넣어주세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/lightGray"
            android:text="* 명칭은 미입력시 부서 이름이 붙습니다."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/lightGray"
            android:text="   예) 남선교, 여선교"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:textColor="@color/lightGray"
            android:text="* 명칭은 소그룹이름으로도 활용됩니다."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/lightGray"
            android:text="   예) OOO 찬양단, OOO 남선교, OOO 찬양대"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
