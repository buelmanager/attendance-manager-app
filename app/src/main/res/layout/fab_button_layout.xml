<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:visibility="invisible"
        android:orientation="vertical"
        android:id="@+id/fab_back_ll"
        android:alpha="0.7"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

    <Button
        android:visibility="invisible"
        android:id="@+id/fab_4th_tooltip_btn"
        android:layout_marginRight="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_label"
        android:text="모드변경"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_anchor="@+id/fab_4th_btn"
        app:layout_anchorGravity="left|center" />

    <Button
        android:visibility="invisible"
        android:id="@+id/fab_3th_tooltip_btn"
        android:layout_marginRight="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_label"
        android:text="회원등록"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_anchor="@+id/fab_3th_btn"
        app:layout_anchorGravity="left|center" />

    <Button
        android:visibility="invisible"
        android:id="@+id/fab_2nd_tooltip_btn"
        android:layout_marginRight="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_label"
        android:text="통계현황"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_anchor="@+id/fab_2nd_btn"
        app:layout_anchorGravity="left|center" />

    <Button
        android:visibility="invisible"
        android:id="@+id/fab_fst_tooltip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:background="@drawable/ic_label"
        android:text="출석체크"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_anchor="@+id/fab_fst_btn"
        app:layout_anchorGravity="left|center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_4th_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="255dp"
        android:layout_marginRight="16dp"
        android:tint="@color/white"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_find_replace"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_3th_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="195dp"
        android:layout_marginRight="16dp"
        android:tint="@color/white"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_add_member"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_2nd_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="135dp"
        android:layout_marginRight="16dp"
        android:tint="@color/white"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_select_btn"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:tooltipText="출석체크"
        android:id="@+id/fab_fst_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="16dp"
        android:tint="@color/white"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_atten_check"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_fst_act_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="75dp"
        android:tint="@color/white"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_plug"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="135dp"
        android:tint="@color/white"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_help_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/switch_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_apps"
        tools:ignore="VectorDrawableCompat" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>