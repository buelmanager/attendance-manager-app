<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/nav_header_main_point_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_header_tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="android.studio@android.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/nav_header_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Studio"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <TextView
                android:layout_marginTop="32dp"
                android:id="@+id/nav_header_tv_user_c_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android point"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/nav_header_tv_user_c_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android point"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/nav_header_tv_user_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android Studio"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/nav_header_btn_user_point"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nav_header_btn_user_point_helper"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorAccent"
            android:text="우리교회 후원"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/nav_header_btn_user_point_helper"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/blue400"
            android:text="레벨과 포인트" />

        <ImageView

            android:src="@drawable/ic_account"
            android:id="@+id/nav_header_iv_user_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </RelativeLayout>
</LinearLayout>
