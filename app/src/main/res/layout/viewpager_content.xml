<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_pager_content_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        tools:ignore="Suspicious0dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/view_pager_tv_title"
            android:gravity="center"
            android:text="11111111111"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/view_pager_content_share"
            android:layout_marginLeft="10dp"
            android:tint="@color/vordiplom_color_orange"
            android:src="@drawable/ic_share"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>


    <TextView
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:id="@+id/view_pager_tv_content"
        android:text="당일 출석 현황"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp" />
</LinearLayout>